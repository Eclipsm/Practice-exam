passenger out and in : 3 2
passenger exceeds at bus stop 2
Final passenger is : 13
Max passenger is : 14




#include <stdio.h>
 
int main(void) {
  // Your code started here.
  int p, isCheese;
  scanf("%d %d", &p, &isCheese);
 
  for (int i = 0; i < p + 5; i++) {
    if (i == 0) {
      for (int j = 0; j < 4 * p; j++) {
        if (j < 2 || j > (4 * p) - 3) {
          printf("  ");
        } else {
          printf("B ");
        }
      }
    } else if (i < 3 || i > p + 2) {
      for (int j = 0; j < 4 * p; j++) {
        if (j < 1 || j > (4 * p) - 2) {
          printf("  ");
        } else {
          printf("B ");
        }
      }
    } else {
      for (int j = 0; j < 4 * p; j++) {
        printf("* ");
      }
      if (isCheese == 1) {
        printf("\n");
        for (int k = 0; k < 4 * p; k++) {
          printf("- ");
        }
      }
    }
    printf("\n");
  }
  return 0;
}
