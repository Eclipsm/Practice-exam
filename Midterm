int main() {
    int small,medium,large;
    char saucechoice;
    float sauceprice =0, total = 0;
    
 scanf("%d %d %d %c", &small, &medium, &large, &saucechoice);
    total = (small*20)+(medium*30)+(large*40);
    if(saucechoice == 'M'){
        sauceprice = 15;
    }else if(saucechoice == 'T'){
        sauceprice = 15;
    }else{
        sauceprice = 0;
    }
    total = total + sauceprice;
    total = total * 1.07;
    
    printf("Small skewers: %d\n", small);
    printf("Medium skewers: %d\n", medium);
    printf("Large skewers: %d\n", large);
    printf("Total: %.2f\n", total);
    
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}

#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);  // รับขนาด

    for (int i = 0; i < n; i++) {         // วนแถว
        for (int j = 0; j < n; j++) {     // วนคอลัมน์
            // แถวบน, ล่าง หรือ คอลัมน์ซ้าย, ขวา
            if (i == 0 || i == n-1 || j == 0 || j == n-1) {
                printf("* ");
            } else {
                printf("  "); // รูตรงกลาง
            }
        }
        printf("\n");
    }

    return 0;
}

